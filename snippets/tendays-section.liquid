<div class="container ten-days-section"> 
  <img
    class="ten-days visible-desktop-tendeals lazyload" data-sizes="auto"
    data-src="https://cdn.shopify.com/s/files/1/0099/2867/1291/files/DESKTOP_610b2ee7-0283-496f-859c-869d4cdefd50_desk.png?v=1678272733"
    alt="ten days" />
  <img
    class="ten-days visible-mobile-tendeals lazyload" data-sizes="auto"
    data-src="https://cdn.shopify.com/s/files/1/0099/2867/1291/files/MOBILE_5c425af7-78b7-4716-806b-83020eb58b81_mobile.png?v=1678272733"
    alt="ten days" />
  <div id="clockdiv">
    <div>
      <span class="days" id="day"></span>
      <div class="smalltext">Days</div>
    </div>
    <div>
      <span class="hours" id="hour"></span>
      <div class="smalltext">Hours</div>
    </div>
    <div>
      <span class="minutes" id="minute"></span>
      <div class="smalltext">Minutes</div>
    </div>
    <div>
      <span class="seconds" id="second"></span>
      <div class="smalltext">Seconds</div>
    </div>
  </div>

  <p id="demo"></p>
</div>
<style>
  .ten-days {
    margin-top: 20px;
    max-width: 100%;
    border: 2px solid grey;
    padding: 15px;
  }

  #clockdiv {
    font-family: 'Poppins';
    color: #ff366f ;
    position: absolute;
       top: 41%;
    right: 19em;
    bottom: 0;
    display: inline-block;
    font-weight: 500;
    text-align: center;
    font-size: 21px;
    background-color: transparent;
    margin: auto;
    padding: 18px;
  }
  

  #clockdiv span {
    color: #ff366f ;
    line-height: 24px;
  }

  #clockdiv>div {
    display: inline-block;
    margin: 5px;
  }

  .visible-desktop-tendeals {
    display: block !important;
  }

  .visible-mobile-tendeals {
    display: none !important;
  }

  @media only screen and (max-width: 767px) {
    .visible-desktop-tendeals {
      display: none !important;
    }

    .visible-mobile-tendeals {
      display: block !important;
    }

    #clockdiv span {
      color: #ff366f;
    }

    #clockdiv {
      font-family: sans-serif;
      color: #ff366f ;
      position: absolute;
      top: 71%;
      right: 0;
      left: 0;
      font-weight: bold;
      text-align: center;
      font-size: 16px;
      background-color: transparent;
      margin: 0;
      padding: 0;
      height: 4em;
      width: 100%;
      display: flex;
      justify-content: space-evenly;
    }

    .ten-days {
      margin-top: 20px;
      border: 2px solid grey;
      padding: 10px;
    }
  }

  #clockdiv>div,
  #clockdiv>span {
    display: inline-block;
    margin: 5px;
    line-height: 21px;
  }

  #clockdiv>p {
    color: #000;
    font-weight: bolder;
    font-size: 23px;
    margin-bottom: 30px;
  }

  #clockdiv div>span {
    display: inline-block;

  }

  .container.ten-days-section {
    position: relative;
  }

</style>
<script>
  var deadline = new Date("Mar 10, 2023 12:00:00").getTime();

  var x = setInterval(function () {

    var now = new Date().getTime();
    var t = deadline - now;
    var days = Math.floor(t / (1000 * 60 * 60 * 24));
    var hours = Math.floor((t % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes = Math.floor((t % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((t % (1000 * 60)) / 1000);
    document.getElementById("day").innerHTML = days;
    document.getElementById("hour").innerHTML = hours;
    document.getElementById("minute").innerHTML = minutes;
    document.getElementById("second").innerHTML = seconds;
    if (t < 0) {
      clearInterval(x);
      document.getElementById("demo").innerHTML = "TIME UP";
      document.getElementById("day").innerHTML = '0';
      document.getElementById("hour").innerHTML = '0';
      document.getElementById("minute").innerHTML = '0';
      document.getElementById("second").innerHTML = '0';
    }
  }, 1000);
</script>